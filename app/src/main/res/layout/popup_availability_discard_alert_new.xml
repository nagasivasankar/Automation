<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogParentLayout"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_rounded_corners_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_rounded_crns_white"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="25dp"
        android:text="You updated your Availability. Do you want to save the changes?"
        android:textColor="@color/light_black"
        android:tag="@string/mallory_book"
        android:textSize="@dimen/medium_textsize" />

    <LinearLayout
        android:id="@+id/repeatLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/repeatImage"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:tag="off"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_white_circle_shifts"
            android:padding="6dp" />

        <TextView
            android:id="@+id/tv_apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:lineSpacingExtra="3dp"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:text="Apply changes from this week onwards."
            android:textColor="@color/light_black"
            android:tag="@string/mallory_book"
            android:textSize="@dimen/medium_below_textsize"  />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_text_color"
        android:paddingTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/discardChangesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:tag="@string/mallory_book"
            android:text="Discard Changes"
            android:textColor="@color/textViewColor"
            android:textSize="@dimen/medium_textsize" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_text_color" />

        <TextView
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:tag="@string/mallory_book"
            android:text="Cancel"
            android:textColor="@color/textViewColor"
            android:textSize="@dimen/medium_textsize" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_text_color" />

        <TextView
            android:id="@+id/saveChangesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="8dp"
            android:tag="@string/mallory_book"
            android:text="Save Changes"
            android:textColor="@color/dark_skyblue"
            android:textSize="@dimen/medium_textsize" />
    </LinearLayout>

</LinearLayout>
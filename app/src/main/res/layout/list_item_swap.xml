<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_offers_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:padding="10dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:tag="@string/mallory_book"
            android:text="OCT 3 - 9"
            android:textAllCaps="true"
            android:textColor="@color/dark_purple"
            android:textSize="@dimen/medium_below_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:tag="@string/mallory_book"
            android:text="3 offers"
            android:textAllCaps="true"
            android:textColor="@color/dark_purple"
            android:textSize="@dimen/medium_below_textsize" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_white_with_corners"
        android:orientation="vertical"
        android:padding="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_blue"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_shift_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/ic_down_black"
                android:drawablePadding="15dp"
                android:tag="@string/mallory_book"
                android:text="@string/text_shift_swap"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_above_textsize" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="15dp"
                android:tag="@string/mallory_book_Italic"
                android:text="Pending approval"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_above_textsize" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_left_profile_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/tv_left_tile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:tag="@string/mallory_book"
                        android:text="Zarathusra wants to trade"
                        android:textColor="@color/dark_yash"
                        android:textSize="@dimen/medium_textsize" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_light_white"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tv_left_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:tag="@string/mallory_mediuem"
                            android:text="MON"
                            android:textColor="#424242"
                            android:textSize="@dimen/bigger_than_biggest_textsize" />

                        <TextView
                            android:id="@+id/tv_left_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:tag="@string/mallory_mediuem"
                            android:text="3"
                            android:textColor="#424242"
                            android:textSize="@dimen/very_large_text_size" />

                        <TextView
                            android:id="@+id/tv_left_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:tag="@string/mallory_mediuem"
                            android:text="OCT"
                            android:textColor="#424242"
                            android:textSize="@dimen/bigger_than_biggest_textsize" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/ic_down_black" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:background="@color/yellow" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_with_multi_radious"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/tv_left_from_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:tag="@string/mallory_book"
                            android:text="6:00am"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/medium_textsize" />

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="@dimen/vertical_bar_height"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:background="#828282"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tv_left_total_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:tag="@string/mallory_book"
                            android:text="3Hrs"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/medium_textsize" />

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="@dimen/vertical_bar_height"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:background="#828282"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tv_left_to_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:tag="@string/mallory_book"
                            android:text="9:00am"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/medium_textsize" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_left_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:singleLine="true"
                    android:tag="@string/mallory_book"
                    android:text="BARISTA"
                    android:textAllCaps="true"
                    android:textColor="@color/light_yellow"
                    android:textSize="@dimen/medium_above_textsize" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_left_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:singleLine="true"
                        android:tag="@string/mallory_book"
                        android:text="300 Folsom"
                        android:textColor="@color/dark_yash"
                        android:textSize="@dimen/medium_above_textsize" />

                    <ImageView
                        android:id="@+id/iv_left_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_top_black" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_right_profile_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/tv_right_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:tag="@string/mallory_book"
                        android:text="Zarathusra wants to trade"
                        android:textColor="@color/dark_yash"
                        android:textSize="@dimen/medium_textsize" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_light_white"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tv_right_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:tag="@string/mallory_mediuem"
                            android:text="MON"
                            android:textColor="#424242"
                            android:textSize="@dimen/bigger_than_biggest_textsize" />

                        <TextView
                            android:id="@+id/tv_right_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:tag="@string/mallory_mediuem"
                            android:text="3"
                            android:textColor="#424242"
                            android:textSize="@dimen/very_large_text_size" />

                        <TextView
                            android:id="@+id/tv_right_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:tag="@string/mallory_mediuem"
                            android:text="OCT"
                            android:textColor="#424242"
                            android:textSize="@dimen/bigger_than_biggest_textsize" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/ic_down_black" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:background="@color/yellow" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_with_multi_radious"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/tv_right_from_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:tag="@string/mallory_book"
                            android:text="6:00am"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/medium_textsize" />

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="@dimen/vertical_bar_height"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:background="#828282"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tv_right_total_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:tag="@string/mallory_book"
                            android:text="3Hrs"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/medium_textsize" />

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="@dimen/vertical_bar_height"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:background="#828282"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tv_right_to_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:tag="@string/mallory_book"
                            android:text="9:00am"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/medium_textsize" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_right_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:singleLine="true"
                    android:tag="@string/mallory_book"
                    android:text="BARISTA"
                    android:textAllCaps="true"
                    android:textColor="@color/light_yellow"
                    android:textSize="@dimen/medium_above_textsize" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_right_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:singleLine="true"
                        android:tag="@string/mallory_book"
                        android:text="300 Folsom"
                        android:textColor="@color/dark_yash"
                        android:textSize="@dimen/medium_above_textsize" />

                    <ImageView
                        android:id="@+id/iv_right_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_top_black" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
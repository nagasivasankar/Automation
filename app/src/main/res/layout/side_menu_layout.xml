<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sideMenuParentLayout"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:background="@drawable/bg_sidemenu"
    android:clickable="true"
    android:gravity="end"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profileImageSideMenu"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle_profile_pic"
                android:padding="7dp"
                android:src="@drawable/ic_place_holder_profile"
                app:civ_border_color="#CBCBDF"
                app:civ_border_width="0dp" />

            <TextView
                android:id="@+id/tv_side_menu_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:tag="@string/mallory_book_regular"
                android:textColor="#2D2F31"
                android:textSize="@dimen/biggest_textsize" />
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99ffffff"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:requiresFadingEdge="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33000000" />

            <TextView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:padding="15dp"
                android:tag="@string/mallory_light"
                android:text="@string/profile"
                android:textColor="#0A0B0C"
                android:textSize="@dimen/medium_above_textsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33000000" />

            <TextView
                android:id="@+id/availability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:padding="15dp"
                android:tag="@string/mallory_light"
                android:text="@string/availability"
                android:textColor="#0A0B0C"
                android:textSize="@dimen/medium_above_textsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33000000" />

            <TextView
                android:id="@+id/work_preferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:padding="15dp"
                android:tag="@string/mallory_light"
                android:text="@string/work_preferences"
                android:textColor="#0A0B0C"
                android:textSize="@dimen/medium_above_textsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33000000" />

            <TextView
                android:id="@+id/notifi_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:padding="15dp"
                android:tag="@string/mallory_light"
                android:text="@string/notifi_settings"
                android:textColor="#0A0B0C"
                android:textSize="@dimen/medium_above_textsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33000000" />

            <LinearLayout
                android:id="@+id/layout_about_legion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="30dp"
                android:paddingRight="15dp"
                android:layout_gravity="center"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/about_legion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="left|center"
                    android:tag="@string/mallory_light"
                    android:text="@string/about_legion"
                    android:textColor="#0A0B0C"
                    android:textSize="@dimen/medium_above_textsize" />

                <TextView
                    android:layout_marginTop="1dp"
                    android:text="0.12.2"
                    android:id="@+id/versionTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:tag="@string/mallory_light"
                    android:textColor="#0A0B0C"
                    android:textSize="@dimen/smaller_textsize" />

                <ImageView
                    android:layout_marginTop="1dp"
                    android:id="@+id/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_down_black" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33000000" />

            <LinearLayout
                android:id="@+id/layout_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#b3ffffff"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="40dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/privacy_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="@string/mallory_light"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/textViewColor"
                    android:textSize="@dimen/medium_above_textsize" />

                <TextView
                    android:id="@+id/terms_of_use"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:tag="@string/mallory_light"
                    android:text="@string/terms_of_use"
                    android:textColor="@color/textViewColor"
                    android:textSize="@dimen/medium_above_textsize" />
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33000000"
                android:visibility="gone" />

            <TextView
                android:id="@+id/sendFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:padding="15dp"
                android:tag="@string/mallory_light"
                android:text="Send Feedback"
                android:textColor="#0A0B0C"
                android:textSize="@dimen/medium_above_textsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33000000"  />

            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:padding="15dp"
                android:tag="@string/mallory_light"
                android:text="@string/logout"
                android:textColor="#0A0B0C"
                android:textSize="@dimen/medium_above_textsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33000000"  />

            <TextView
                android:id="@+id/onboarding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:padding="15dp"
                android:tag="@string/mallory_light"
                android:text="On-Boarding"
                android:textColor="#0A0B0C"
                android:textSize="@dimen/medium_above_textsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="#33000000" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayoutCircIv"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_picCircleIv"
            android:layout_width="@dimen/pic_height"
            android:layout_height="@dimen/pic_height"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/legion_stage_launcher"
            app:civ_border_color="@color/light_black"
            app:civ_border_width="1dp" />


        <TextView
            android:id="@+id/tv"
            android:layout_width="@dimen/pic_height"
            android:layout_height="@dimen/pic_height"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="17sp"
            android:background="@drawable/legion_stage_launcher"
            android:gravity="center_vertical|center_horizontal"
            />

    </FrameLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogParentLayout"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_rounded_corners_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_rounded_crns_white"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"
        android:text="Do you want to change your Availability for this week only or repeat from this week forward?"
        android:textColor="@color/light_black"
        android:tag="@string/mallory_book"
        android:textSize="@dimen/medium_textsize" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_text_color"
        android:paddingTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:tag="@string/mallory_book"
            android:text="Cancel"
            android:textColor="@color/textViewColor"
            android:textSize="@dimen/medium_textsize" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_text_color" />

        <TextView
            android:id="@+id/thisWeekOnlyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:tag="@string/mallory_book"
            android:text="This Week Only"
            android:textColor="@color/dark_skyblue"
            android:textSize="@dimen/medium_textsize" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_text_color" />

        <TextView
            android:id="@+id/repeatForwardButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="8dp"
            android:tag="@string/mallory_book"
            android:text="Repeat Forward"
            android:textColor="@color/dark_skyblue"
            android:textSize="@dimen/medium_textsize" />
    </LinearLayout>

</LinearLayout>
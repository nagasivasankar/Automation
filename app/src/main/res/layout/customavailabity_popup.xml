<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    android:background="@android:color/transparent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/up_arrow"
        android:tint="#F3F3F3" />

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_availability_popup"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/deleteLL"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/deleteIv"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/delete_availability"
                android:tint="@color/light_gray_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:tag="@string/proximaNovaCond_Medium"
                android:text="Delete this time slot"
                android:textColor="#31397C"
                android:textSize="@dimen/smaller_textsize" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/light_gray_2" />

        <LinearLayout
            android:id="@+id/customSlotLL"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/customAvailabilityIv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_custom_availability_off" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:tag="@string/proximaNovaCond_Medium"
                android:text="Custom availability"
                android:textColor="#31397C"
                android:textSize="@dimen/smaller_textsize" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/down_arrow"
        android:tint="#F3F3F3" />
</LinearLayout>
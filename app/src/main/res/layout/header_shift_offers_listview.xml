<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E0E1EA"
    android:paddingLeft="15dp"
    android:id="@+id/parentLayout"
    android:paddingRight="15dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/header_offers_range_date_tv"
        android:layout_width="0dp"
        android:text="JAN 23 - 29"
        android:textColor="#53585F"
        android:tag="@string/mallory_medium_regular"
        android:textSize="@dimen/medium_below_textsize"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/header_offers_count_tv"
        android:layout_width="wrap_content"
        android:text="8 OFFERS"
        android:textColor="#53585F"
        android:tag="@string/mallory_book_regular"
        android:textSize="@dimen/medium_below_textsize"
        android:layout_height="wrap_content" />
</LinearLayout>